<p id="notice"><%= notice %></p>

 <div class="w3-main w3-content w3-padding" style="max-width:1200px;margin-top:100px" id="itemsContainer">
  
  <h1 class="mobile" >Items</h1>
     
     <% @mobiles.each do |mobile| %>
         <div class="w3-row-padding w3-padding-16 w3-center" >
          <div >
               <h1 id=h1 ><%= mobile.brand %></h1>
               <div style="width:100%">
               <%= link_to (image_tag mobile.image_url, :class => "mobileimiages"), mobile %>
                       <p><%= mobile.details %></p>
                      <p>Price <%= number_to_currency(mobile.price, :unit => "â‚¬") %>
                      <br>
                       Category: <%= mobile.model %>
                       <br>
                
               <div>
                  <p>
                    <%= link_to 'Show',  mobile, :class => "button", :role => "button" %>
                    <%= link_to 'Edit',  edit_mobile_path(mobile), :class => "button", :role => "button" %>
                    <%= link_to 'Destroy',  mobile, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button", :role => "button" %>
                  </p>
               </div>   
            </div>
           </div>
          </div>
    <% end %>
      
</div>

<br>
<%= link_to 'New mobile',  new_mobile_path, :class => "button", :role => "button" %>

<script>
$(document).ready(function(){
  $("#h1").mouseenter(function(){
    alert("click show items");
  });
});
</script>

